extends ../layouts/common.pug

block content
  h1 Create transaction
  form(action="/transactions/create", method="POST")
    .form-group
      select.custom-select(name="userId")
        each user in users
          option(value=user.id)= user.name
          
    .form-group
      select.custom-select(name="bookId")
        each book in books
          option(value=book.id)= book.title

    button(class="btn btn-success") Create