extends ../layouts/common.pug

block content
  form(action="/transactions/create", method="POST")
    ul
      li
        select(name="userId")
          each user in users
            option(value=user.id)= user.name
      li
        select(name="bookId")
          each book in books
            option(value=book.id)= book.title

      button(class="btn btn-success") Create