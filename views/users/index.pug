extends ../layouts/common.pug

block content
  h1 
    span.mr-3 Users
    a.btn.btn-primary(href="/users/create") New
  
  .d-flex.align-items-center
    form.ml-auto(action="/users", method="GET", class="d-flex")
      input(type="text", name="q", value=q, class="form-control")
      button(class="btn btn-primary ml-2") Search
      
  table.table
    tr
      td Name
      td Phone
      td Actions
      
    each user in users
      tr
        td= user.name
        td= user.phone
        td
          a.btn.btn-light(href='/users/' + user.id) View
          a.btn.btn-light(href='/users/' + user.id + '/delete') Delete
          a.btn.btn-light(href='/users/' + user.id + '/update') Update