extends ../layouts/common.pug

block content
  h1 
    span.mr-3 Books
    a.btn.btn-primary(href="/books/create") New
  
  .d-flex.align-items-center
    form.ml-auto(action="/books", method="GET", class="d-flex")
      input(type="text", name="q", value=q, class="form-control")
      button(class="btn btn-primary ml-2") Search

  table.table
    tr
      td.font-weight-bold Title
      td.font-weight-bold Description
      td.font-weight-bold Actions
      
    each book in books
      tr
        td= book.title
        td= book.description
        td
          a.btn.btn-light(href='/books/' + book.id) View
          a.btn.btn-light(href='/books/' + book.id + '/delete') Delete
          a.btn.btn-light(href='/books/' + book.id + '/update') Update